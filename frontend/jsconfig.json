{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "commonjs",
        "target": "ES6",
        "jsx": "preserve",
        "checkJs": true,
        "paths": {
            "@states/*": ["states*"],
            "@pages/*": ["pages/*"],
            "@components/*": ["components/*"],
        },
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}